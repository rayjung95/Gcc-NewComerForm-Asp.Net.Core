@model Gccform.Models.PersonName

<div class="form-row">
    <input type="hidden" asp-for="ID" />
    <div class="form-group col-md-3">
        <input type="text" asp-for="k_fname" maxlength="100" placeholder="Korean First Name" >
    </div>

    <div class="form-group col-md-3">
        <input asp-for="k_lname" placeholder="Korean Last Name" type="text"   >
    </div>

    <div class="form-group col-md-3">
        <input asp-for="e_fname" placeholder="English First Name" type="text"   >
    </div>

    <div class="form-group col-md-3">
        <input asp-for="e_lname" placeholder="English Last Name" type="text"   >
    </div>
</div>