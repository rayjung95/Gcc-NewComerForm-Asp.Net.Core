@model Gccform.ViewModels.TableView

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}


<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    English Name
                </th>
                <th>
                    Korean Name
                </th>
                <th>
                    Job Title
                </th>
                <th>
                    Company Name
                </th>
                <th>
                    Date of Birth
                </th>
                <th></th>
        </tr>
    </thead>
    <tbody>

    @{int i = 0;}
 @foreach(var item in Model.Persons)
 {
     <tr>
            <td>
                @Model.PersonNames[@i].e_fname @Model.PersonNames[@i].e_lname 
            </td>
            <td>
                @Model.PersonNames[@i].e_fname @Model.PersonNames[@i].e_lname 
            </td>
            <td>
                @item.job 
            </td>
            <td>
                @item.company_name
            </td>
            <td>
                @item.dob
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
     i++;
 }

    </tbody>
</table>
